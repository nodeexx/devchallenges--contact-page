@layer base {
  html,
  body {
    /* General */
    @apply m-0
    block
    min-h-full
    w-full
    p-0;
  }

  body {
    @apply px-6 py-6 lg:px-8 xl:px-[72px] xl:py-[20px];
    background-image: url('/images/bg-image.svg');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    background-attachment: fixed;
    min-height: 100vh;
  }
}
